<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    style="10dp"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/item_list_selector">

    <!-- img application -->
    <ImageView
        android:id="@+id/po_list_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <!-- text name of application -->
    <TextView
        android:id="@+id/po_list_item_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/po_list_item_image"/>

    <!-- button run app -->
    <Button
        android:id="@+id/po_list_lockApp_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:onClick="startApplication"
        android:text="L" />

</RelativeLayout >